use_frameworks!
platform :ios, '8.0'

target 'InkwellExample' do
  pod 'Inkwell', :path => '../'
end

post_install do |installer|
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |config|
            config.build_settings['SWIFT_VERSION'] = '4'
        end
    end
end
